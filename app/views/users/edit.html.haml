- provide(:title, 'Edit user')
%h1 Update your profile
.row
  .col-md-6.col-md-offset-3
    = form_for(@user) do |f|
      = render 'shared/error_messages', object: f.object
      = f.label :name
      = f.text_field :name, class: 'form-control'
      = f.label :email
      = f.email_field :email, class: 'form-control'
      = f.label :password
      = f.password_field :password, class: 'form-control'
      = f.label :password_confirmation, "Confirmation"
      = f.password_field :password_confirmation, class: 'form-control'
      = f.label :age, "Age"
      = f.text_field :age, class: 'form-control'
      = f.label :nationality, "Nationality"
      = f.text_field :nationality, class: 'form-control'
      = f.label :introduction, "Introduction"
      = f.text_area :introduction, class: 'form-control'
      = f.submit "Save changes", class: "btn btn-primary"
    .gravatar_edit
      = gravatar_for @user
      %a{:href => "http://gravatar.com/emails", :target => "_blank"} change
