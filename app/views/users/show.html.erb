<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
    <h3 style="text-align: left">プロフィール</h3>
    <div class="profile">
    <% unless @profile.nil? %>
        <p><%= @profile.content %></p>
    <% end %>
    </div>
    <% if @profile.nil? %>
      <%= link_to "プロフィール編集", new_profile_path %>
    <% else %>
      <%= link_to "プロフィール編集", edit_profile_path %>
    <% end %>
  </aside>

  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
